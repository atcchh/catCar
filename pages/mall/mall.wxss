.shangpin{
  height:445rpx;
  background:#fff;
  width:100%;
}
.shangpin>view{
  float:left;
  border-right:1px solid #f2f2f2;
  border-bottom:1px solid #f2f2f2;
  box-sizing: border-box;
  width:33%;
  height:223rpx;
  text-align: center;
}
.shangpin:after{
  content:"";
  display:block;
  clear:both;
}
.shangpin>view:nth-child(3),.shangpin>view:nth-child(6),.shangpin>view:nth-child(9),.shangpin>view:nth-child(12){
  border-right:0;
}
